<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bd_prototipo?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping class="seguranca.model.TbPerfil"/>
    <mapping class="seguranca.model.TaPrivilegio"/>
    <mapping class="seguranca.model.TbUsuario"/>
    <mapping class="seguranca.model.TbMenu"/>
    <mapping class="seguranca.model.TbLog"/>
    <mapping class="seguranca.model.TbOpcao"/>
  </session-factory>
</hibernate-configuration>
